<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reservation List</title>
    <!-- Include Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/style.css">
    <link rel="icon" type="image/x-icon" href="/FlightXpressHeader.svg">
</head>
<body>
     <!-- Start of Header -->
     <header>
        <a href="#" class="logo"><img src="/FlightXpressHeader.svg" alt="Logo"></a>
        <div class="bx bx-menu" id="menu-icon"></div>
        <ul class="navbar">
          <li class="menubar">
            <a href="#book">BOOK</a>
            <ul class="submenu">
              <li><a href="/">Book With Us</a></li>
              <li><a href="/reservationlist">Flights</a></li>
              <li><a href="#option3">Seat Sale</a></li>
            </ul>
          </li>
          <li class="menubar">
            <a href="#manage">MANAGE</a>
            <ul class="submenu">
              <li><a href="#option1">Check In</a></li>
              <li><a href="#option2">Flight Status</a></li>
              <li><a href="#option3">Manage Book</a></li>
            </ul>
          </li>
          <li class="menubar">
            <a href="#infotravel">INFO TRAVEL</a>
            <ul class="submenu">
              <li><a href="#option1">Payment Option</a></li>
              <li><a href="#option2">Special Assistance</a></li>
              <li><a href="#option3">Travel Documents</a></li>
            </ul>
          </li>
          <li class="menubar">
            <a href="#explore">EXPLORE</a>
            <ul class="submenu">
              <li><a href="#option1">Philippine Destinations</a></li>
              <li><a href="#option2">International Destinations</a></li>
              <li><a href="#option3">City Guides</a></li>
            </ul>
          </li>
          <li class="menubar">
            <a href="/aboutUs">ABOUT US</a>
          </li>
          <li class="menubar">
            <a href="#higuest" class="hi">Welcome, <%= name %></a>
          <ul class="submenus">
            <li><a href="#option1">My Profile</a></li>
            <li><a href="#option2">Log Out</a></li>
          </ul>
        </li>
            <li class="menubar">
              <button class="login-button" onclick="location.href='/login'"><%= logstatus%></button>
            </li>
        </ul>
      </header>
      <!-- End of Header -->
    <div class="container mt-5 autoHW">
        <% reservationsByPersonalDetails.forEach(entry => { %>
            <div class=" mb-4 autoHW">
                <div class="card-header autoHW">
                    <h2>Reservation List for <%= entry.personalDetails.firstname %> <%= entry.personalDetails.lastname %></h2>
                </div>
                <div class="card-body">
                    <table class="table table-bordered table-striped">
                        <thead class="thead-dark">
                            <tr>
                                <th>Reservation Date</th>
                                <th>Flight Type</th>
                                <th>Flight Status</th>
                                <th>Flight ID</th>
                                <th>Seat ID</th>
                                <th>Travel Class</th>
                                <th>Transaction ID</th>
                                <th>Price</th>
                                <th>Route Code</th>
                                <th>Departure Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% entry.reservations.forEach(reservation => { %>
                                <tr>
                                    <td><%= reservation.reservationDate ? reservation.reservationDate.toDateString() : 'N/A' %></td>
                                    <td><%= reservation.flightType %></td>
                                    <td><%= reservation.flightStatus %></td>
                                    <td><%= reservation.flightID ? reservation.flightID._id : 'N/A' %></td>
                                    <td><%= reservation.seatID ? reservation.seatID.seatID : 'N/A' %></td>
                                    <td><%= reservation.seatID ? reservation.seatID.travel_class : 'N/A' %></td>
                                    <td><%= reservation.transactionID ? reservation.transactionID._id : 'N/A' %></td>
                                    <td><%= reservation.flightID ? reservation.flightID.price : 'N/A' %></td>
                                    <td><%= reservation.flightID ? reservation.flightID.routecode : 'N/A' %></td>
                                    <td><%= reservation.flightID && reservation.flightID.departure ? reservation.flightID.departure.toDateString() : 'N/A' %></td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        <% }) %>
    </div>
    <!-- Include Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
